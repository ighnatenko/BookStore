%h1.general-title-margin= " Order #{@order.tracking_number}"
.row.mb-20
  - @order.addresses.each do |address|
    .col-sm-3
      %h3.general-subtitle.mt-0= "#{address.address_type.capitalize} Address"
      %p.general-address
        = "#{address.firstname} #{address.lastname}"
        %br
        = address.address
        %br
        = "#{address.city} #{address.zipcode}"
        %br
        = address.country
        %br
        = "Phone #{address.phone}"
  .col-sm-3
    %h3.general-subtitle.mt-0 Shipments
    %p.general-address
      = @order.delivery.title
      %br
      = @order.delivery.days
  .col-sm-3
    %h3.general-subtitle.mt-0 Payment Information
    %p.general-address
      = "** ** ** #{@order.credit_card.number.last(4)}"
      %br
      = @order.credit_card.expiration_date
.visible-xs
  - @order.books.each do |book|
    .general-cart-item.divider-lg.mb-55
      .general-img-wrap-table
        = cl_image_tag(book.decorate.root_image, class: 'cart-img-shadow')
      %p.title= book.title
      %table.table
        %tr
          %td
            %span.in-grey-600 Price
          %td
            %span.font-16.in-gold-500= "€#{book.price}"
        %tr
          %td.vertical-middle
            %span.in-grey-600 Quantity
          %td
            %span= book.decorate.quantity_in_cart(@order)
        %tr
          %td
            %span.in-grey-600 SubTotal
          %td
            %span.font-16.in-gold-500= "€#{book.decorate.total_price(@order)}"
.hidden-xs.divider-lg.pt-20
  %table.table.table-hover
    %thead
      %tr
        %th
          %span.in-grey-600 Book
        %th.col-method
        %th
          %span.in-grey-600 Price
        %th
          %span.in-grey-600 Quantity
        %th
          %span.in-grey-600 Total
    %tbody
      - @order.books.each do |book|
        %tr
          %td
            .general-img-wrap-table
              = cl_image_tag(book.decorate.root_image, class: 'cart-img-shadow pull-left')
          %td
            %p.title= book.title
            %p.in-grey-600.fw-300= book.description
          %td
            %span.font-16.in-gold-500= "€#{book.price}"
          %td
            %span.ml-30= book.decorate.quantity_in_cart(@order)
          %td
            %span.font-16.in-gold-500= "€#{book.decorate.total_price(@order)}"
.text-center.general-text-right
  %p.in-gold-500.font-18 Order Summary
  %table.general-summary-table.general-summary-table-right.general-text-right
    %tr
      %td
        %p.font-16 Subtotal:
      %td
        %p.font-16= "€#{@order.decorate.subtotal}"
    %tr
      %td
        %p.font-16 Coupon:
      %td
        %p.font-16= "€#{@order.decorate.coupon_discount}"
    %tr
      %td
        %strong.font-18 Order Total:
      %td
        %strong.font-18= "€#{@order.decorate.order_total}"