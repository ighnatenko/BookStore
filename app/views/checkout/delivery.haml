%h1.general-title-margin Checkout
= render 'steps', step: :delivery
%h3.general-subtitle Credit Card
.visible-xs
  .general-cart-item.divider-lg-bottom.mb-30
    = form_tag(checkout_payment_path, method: :put) do
      %table.table
        - @deliveries.each do |delivery|
          %tr
            %td.col-half
              %span.in-grey-600 Method
            %td.col-half
              .form-group.radio.mt-0.mb-0
                %label.radio-label
                  = radio_button_tag(:delivery, delivery.id, @order.delivery&.id == delivery.id, class: 'radio-input', hidden: "true", require: 'true' )
                  %span.radio-icon
                  %span.radio-text= delivery.title
          %tr
            %td
              %span.in-grey-600 Days
            %td
              %span.font-16.fw-300= delivery.title
          %tr
            %td
              %span.in-grey-600 Price
            %td
              %span.font-16.in-gold-500="€#{delivery.price}"
      .text-center        
        = submit_tag('Save and Continue', class: 'btn btn-default mb-20')
.hidden-xs.mb-res-50
  = form_tag(checkout_payment_path, method: :put) do
    %table.table.table-hover
      %thead
        %tr
          %th.col-method
            %span.in-grey-600.ml-40 Method
          %th
            %span.in-grey-600 Days
          %th
            %span.in-grey-600 Price
      %tbody
        - @deliveries.each do |delivery|
          %tr
            %td
              .form-group.radio.mt-0.mb-0
                %label.radio-label
                  = radio_button_tag(:delivery, delivery.id, @order.delivery&.id == delivery.id, class: 'radio-input', hidden: "true", require: 'true' )
                  %span.radio-icon
                  %span.radio-text= delivery.title
            %td
              %span= delivery.days
            %td
              %span.font-16.in-gold-500="€#{delivery.price}"
    = render 'order_summary', order: @order
    .text-center
      = submit_tag('Save and Continue', class: 'btn btn-default mb-20', id: 'deliveries-submit-btn')