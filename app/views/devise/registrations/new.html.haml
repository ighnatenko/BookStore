.text-center
  %h3.general-login-title= t('register.signup')
  = link_to user_facebook_omniauth_authorize_path, class: 'general-login-icon' do
    %i.fa.fa-facebook-official
  %p.general-login-text= t('register.or')
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'general-form'}) do |f|
  = devise_error_messages!
  .form-group.mb-30
    = f.label :email, t('register.email'), class: 'control-label input-label', html: {  'data-bar' => t('register.enter_email') }
    = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: t('register.enter_email')
  .form-group.mb-30
    = f.label :password, t('register.password'), class: 'control-label input-label', html: { 'data-bar' => t('register.password') }
    = f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: t('register.password')
    - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
      = link_to "Forgot password?", new_password_path(resource_name), class: 'help-block in-gold-500'
  .form-group.mb-30
    = f.label :password_confirmation, t('register.confirm_pasword'), class: 'control-label input-label', html: { 'data-bar' => t('register.confirm_pasword') }
    = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: t('register.confirm_pasword')
  .text-center
    = f.submit t('register.signup'), class: 'btn btn-default mb-20'
%p.general-sign-text.text-center
  = t('register.have_account')
  = link_to t('register.login'), new_user_session_path, class: 'in-gold-500'